


<div class="row">
  <div class="col-sm-6">
    <h1>Accounts</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_account_path, class: 'btn btn-primary' do %>
    Add New Account
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>User</th>
            
      </tr>
    </thead>

    <tbody>
      <% @accounts.each do |account| %>
        <%= content_tag :tr, id: dom_id(account), class: dom_class(account) do %>
          
            <td><%= link_to account.name, account %></td>
          

                      <td><%= account.user %></td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
